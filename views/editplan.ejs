    </ul>
  </div>
</nav>

<div class="container container-content">
    <!-- Bot -->
    <div class="col-md-3 container-bot">
        <div class="container-image">
            <div class="image-helper"><img class="image-AI-logo" src="img/AI_logo.gif"></div>
        </div>
       <iframe src="iframe/bot" height="85%" width="100%" style="position:absolute" scrolling="" frameborder="0"></iframe>
    </div>
    <!--End of "Bot"-->

    <!-- Add Learning Plan -->
    <div class="col-md-9" style="height:100%;background-color:#f0f0f0"> 
        <div class="container-card">
            <div class="topic">
                <h3>Add Your Learning Plan</h3>
                <hr>
            </div>
            <div class="row" style="height:80%">
                <div class="col-md-2"></div>
                <div class="col-md-8 container-form">
                        <form action = "/editplanhandle?ID=<%=PlanID%>" method = "post">
                            <div class="form-group">
                            <label for="Title">Title</label>
                            <input class="form-control" name="PlanTitle" value = "<%=OriginalTitle%>">
                            </div>
                            <div class="form-group">
                            <label for="Type">Topic of the Project</label>
                            <select class="form-control" name="PlanTopic">
                              <option>Graphic Design</option>
                              <option>Media Production</option>
                              <option>Photography</option>
                              <option>Garage</option>
                            </select>
                            </div>
                            <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" name="PlanDetails" rows="3"><%=OriginalDetails%></textarea>
                            </div>
                            <div class="form-group">
                            <label for="target-learners">Target Creators</label>
                            <input class="form-control" name="TargetLearners" value ="<%=OriginalTargetLearners%>">
                            </div>
                            <button type="submit" class="btn btn-primary">Continue</button>
                        </form>
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
    </div>
    <!--End of "Add Learning Plan" -->
</div>

